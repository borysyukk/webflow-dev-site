		<script>
			// Мобільне меню
			const menuToggle = document.getElementById('menu-toggle');
			const navList = document.getElementById('nav-list');
			if (menuToggle && navList) {
				menuToggle.addEventListener('click', () => {
					const isOpen = navList.classList.contains('is-open');
					navList.classList.toggle('is-open');
					menuToggle.setAttribute('aria-label', isOpen ? 'Відкрити меню' : 'Закрити меню');
				});
			}

			const workTabs = document.querySelectorAll('.work-type[data-tab]');
			const workPanels = document.querySelectorAll('.work-preview-panel[data-panel]');
			if (workTabs.length && workPanels.length) {
				const tabs = Array.from(workTabs);
				const panels = Array.from(workPanels);
				const cycleMs = 5000;
				let activeIndex = Math.max(0, tabs.findIndex((item) => item.classList.contains('is-active')));
				let cycleStart = performance.now();

				const setProgress = (value) => {
					tabs.forEach((item, index) => {
						item.style.setProperty('--tab-progress', index === activeIndex ? String(value) : '0');
					});
				};

				const activateTab = (index, restartCycle = true) => {
					activeIndex = index;
					const activeTab = tabs[index];
					const key = activeTab.getAttribute('data-tab');
					if (!key) return;

					tabs.forEach((item) => {
						const active = item === activeTab;
						item.classList.toggle('is-active', active);
						item.setAttribute('aria-selected', active ? 'true' : 'false');
					});

					panels.forEach((panel) => {
						const active = panel.getAttribute('data-panel') === key;
						panel.classList.toggle('is-active', active);
					});

					if (restartCycle) {
						cycleStart = performance.now();
						setProgress(0);
					}
				};

				workTabs.forEach((tab) => {
					tab.addEventListener('click', () => {
						const index = tabs.indexOf(tab);
						if (index === -1) return;
						activateTab(index, true);
					});
				});

				activateTab(activeIndex, true);

				const animateTabs = (now) => {
					const elapsed = now - cycleStart;
					const ratio = Math.min(1, elapsed / cycleMs);
					setProgress(ratio);

					if (elapsed >= cycleMs) {
						const nextIndex = (activeIndex + 1) % tabs.length;
						activateTab(nextIndex, true);
					}

					requestAnimationFrame(animateTabs);
				};

				requestAnimationFrame(animateTabs);
			}

		</script>
